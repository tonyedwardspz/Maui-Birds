<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_Birds.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_Birds"
    xmlns:views="clr-namespace:Maui_Birds.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.FlyoutHeaderBehavior="Fixed"
    Title="Maui Birds">

    <ShellContent
        Title="Flock Catcher"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Flock Fortunes"
        ContentTemplate="{DataTemplate views:FlockFortunes}"
        Route="FlockFortunes" />

    <ShellContent
        Title="Play Your Birds Right"
        ContentTemplate="{DataTemplate views:PlayYourBirdsRight}"
        Route="PlayYourBirdsRight" />

</Shell>

