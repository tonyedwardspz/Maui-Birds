<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="Maui_Birds.MainPage"
             Shell.NavBarIsVisible="True"
             Title="Meet the flock">

    <ScrollView>

        <Grid ColumnDefinitions="2*, *, *"
            Padding="20">
            
            <Image 
                Source="{Binding CurrentBirdImage}"
                Aspect="AspectFit"

                VerticalOptions="Start"
                HorizontalOptions="Center"
                Margin="0, 200, 0, 0"
                
                Grid.Column="0"
                />
                
            <VerticalStackLayout 
                Grid.Column="1" 
                HorizontalOptions="Start"
                VerticalOptions="Start"
                Margin="20, 200, 0, 0"
                
                >
                <Label
                    Text="{Binding CurrentBirdName}"
                    FontSize="40"
                    Grid.Column="1"
                    Margin="0, 0, 0, 20"
                    />

                <Label
                    x:Name="BirdSightingsLabel"
                    Text="{Binding CurrentBirdSightings, StringFormat='Sightings:   {0}'}"
                    FontSize="30"
                    Grid.Column="1"
                    Margin="0, 0, 0, 80"
                    IsVisible="False"
                    />

                <Label
                    x:Name="BirdImageCreditLabel"
                    Text="{Binding ImageCredit, StringFormat='Image Credit:   {0}'}"
                    FontSize="24"
                    Grid.Column="1"
                    Margin="0, 0, 0, 10"
                    IsVisible="False"
                    />

                <Label
                    x:Name="BirdSongCreditLabel"
                    Text="{Binding SongCredit, StringFormat='Song Credit:   {0}'}"
                    FontSize="24"
                    Grid.Column="1"
                    Margin="0, 0, 0, 10"
                    IsVisible="False"
                    />

            </VerticalStackLayout>
            

            <CollectionView
                ItemsSource="{Binding BirdImages}"
                ItemsLayout="VerticalGrid, 4"
                Grid.Column="2"
                >

                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Image Source="{Binding .}" HeightRequest="100" WidthRequest="100" Margin="0" />
                    </DataTemplate>
                </CollectionView.ItemTemplate>
                
            </CollectionView>

            <toolkit:MediaElement
                x:Name="BirdSongPlayer"
                ShouldShowPlaybackControls="False"
                HeightRequest="1"
                WidthRequest="1"
                Volume="1"/>

        </Grid>

    </ScrollView>

</ContentPage>

